{
  "id": "productList",
  "title": "{i18n:product.list.title}",
  "type": "content",
  "scripts": [
    "product/assets/js/product.js"
  ],
  "content": [
    {
      "type": "html",
      "content": "<div class='view-header'><h2>{i18n:product.list.header.title}</h2><p>{i18n:product.list.header.description}</p></div>",
      "order": 0
    },
    {
      "type": "html",
      "content": "<div class='view-toolbar'><button class='btn btn-primary' onclick=\"ogModal.open('product|forms/product-form', {title: '{i18n:product.ogModal.new.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){product.openNew(formId);}})\">âž• {i18n:core.add}</button><button class='btn btn-secondary' onclick='product.refresh();ogToast.info(\"{i18n:product.refresh.success}\")'>ðŸ”„ {i18n:core.refresh}</button></div>",
      "order": 1
    },
    {
      "type": "component",
      "component": "datatable",
      "order": 2,
      "config": {
        "source": "api/product",
        "columns": [
          {
            "id": {
              "name": "i18n:product.column.id",
              "width": "80px",
              "align": "center",
              "sortable": true
            }
          },
          {
            "name": {
              "name": "i18n:product.column.name",
              "sortable": false
            }
          },
          {
            "dc": {
              "name": "i18n:product.column.created",
              "format": "datetime",
              "width": "180px",
              "align": "center"
            }
          }
        ],
        "actions": {
          "edit": {
            "name": "i18n:core.edit",
            "onclick": "ogModal.open('product|forms/product-form', {title: '{i18n:product.ogModal.edit.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){product.openEdit(formId, {id});}})"
          },
          "delete": {
            "name": "i18n:core.delete",
            "onclick": "if(confirm('{i18n:product.confirm.delete}')) product.delete({id}).then(r => r && product.refresh())"
          }
        }
      }
    }
  ]
}