{
  "id": "automationCredentials",
  "title": "{i18n:automation.credentials.listado.title}",
  "type": "content",
  "scripts": ["automation/assets/js/credential.js"],
  "content": [
    {
      "type": "html",
      "content": "<div class='view-header'><h2>{i18n:automation.credentials.listado.header.title}</h2><p>{i18n:automation.credentials.listado.header.description}</p></div>",
      "order": 0
    },
    {
      "type": "html",
      "content": "<div class='view-toolbar'><button class='btn btn-primary' onclick=\"modal.open('automation|forms/credential-form', {title: '{i18n:automation.credentials.modal.new.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){credential.openNew(formId);}})\">âž• {i18n:core.add}</button><button class='btn btn-secondary' onclick='credential.refresh();toast.info(\"{i18n:automation.credentials.refresh.success}\")'>ðŸ”„ {i18n:core.refresh}</button></div>",
      "order": 1
    },
    {
      "type": "component",
      "component": "datatable",
      "order": 2,
      "config": {
        "source": "api/credential",
        "columns": [
          {"id": {"name": "i18n:automation.credentials.column.id", "width": "80px", "align": "center", "sortable": true}},
          {"name": {"name": "i18n:automation.credentials.column.name", "sortable": true}},
          {"type": {"name": "i18n:automation.credentials.column.type", "width": "150px", "align": "center", "sortable": true}},
          {"dc": {"name": "i18n:automation.credentials.column.created", "format": "datetime", "width": "180px", "align": "center"}}
        ],
        "actions": {
          "edit": {
            "name": "i18n:core.edit",
            "onclick": "modal.open('automation|forms/credential-form', {title: '{i18n:automation.credentials.modal.edit.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){credential.openEdit(formId, {id});}})"
          },
          "delete": {
            "name": "i18n:core.delete",
            "onclick": "if(confirm('{i18n:automation.credentials.confirm.delete}')) credential.delete({id}).then(r => r && credential.refresh())"
          }
        }
      }
    }
  ]
}
