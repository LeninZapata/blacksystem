{
  "id": "infoproductProducts",
  "title": "{i18n:infoproduct.products.list.title}",
  "type": "content",
  "scripts": [
    "infoproduct/assets/js/infoproductProduct.js"
  ],
  "content": [
    {
      "type": "html",
      "content": "<div class='view-header'><h2>{i18n:infoproduct.products.list.header.title}</h2><p>{i18n:infoproduct.products.list.header.description}</p></div>",
      "order": 0
    },
    {
      "type": "html",
      "content": "<div class='view-toolbar'><button class='btn btn-primary' onclick=\"modal.open('infoproduct|forms/infoproduct-form', {title: '{i18n:infoproduct.products.modal.new.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){infoproductProduct.openNew(formId);}})\">âž• {i18n:core.add}</button><button class='btn btn-secondary' onclick='infoproductProduct.refresh();toast.info(\"{i18n:infoproduct.products.refresh.success}\")'>ðŸ”„ {i18n:core.refresh}</button></div>",
      "order": 1
    },
    {
      "type": "component",
      "component": "datatable",
      "order": 2,
      "config": {
        "source": "api/product",
        "filters": {
          "context": "infoproductws"
        },
        "columns": [
          {
            "id": {
              "name": "i18n:infoproduct.products.column.id",
              "width": "80px",
              "align": "center",
              "sortable": true
            }
          },
          {
            "name": {
              "name": "i18n:infoproduct.products.column.name",
              "sortable": false
            }
          },
          {
            "dc": {
              "name": "i18n:infoproduct.products.column.created",
              "format": "datetime",
              "width": "180px",
              "align": "center"
            }
          }
        ],
        "actions": {
          "edit": {
            "name": "i18n:core.edit",
            "onclick": "modal.open('infoproduct|forms/infoproduct-form', {title: '{i18n:infoproduct.products.modal.edit.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){infoproductProduct.openEdit(formId, {id});}})"
          },
          "delete": {
            "name": "i18n:core.delete",
            "onclick": "if(confirm('{i18n:infoproduct.products.confirm.delete}')) infoproductProduct.delete({id}).then(r => r && infoproductProduct.refresh())"
          }
        }
      }
    }
  ]
}
