{
  "id": "adminWorkflows",
  "title": "{i18n:admin.workflows.listado.title}",
  "type": "content",
  "scripts": ["admin/assets/js/workFlow.js"],
  "content": [
    {
      "type": "html",
      "content": "<div class='view-header'><h2>{i18n:admin.workflows.listado.header.title}</h2><p>{i18n:admin.workflows.listado.header.description}</p></div>",
      "order": 0
    },
    {
      "type": "html",
      "content": "<div class='view-toolbar'><button class='btn btn-primary' onclick=\"modal.open('admin|forms/workflow-form', {title: '{i18n:admin.workflows.modal.new.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){workFlow.openNew(formId);}})\">âž• {i18n:core.add}</button><button class='btn btn-secondary' onclick='workFlow.refresh();toast.info(\"{i18n:admin.workflows.refresh.success}\")'>ðŸ”„ {i18n:core.refresh}</button></div>",
      "order": 1
    },
    {
      "type": "component",
      "component": "datatable",
      "order": 2,
      "config": {
        "source": "api/workFlow",
        "columns": [
          {"id": {"name": "i18n:admin.workflows.column.id", "width": "80px", "align": "center", "sortable": true}},
          {"name": {"name": "i18n:admin.workflows.column.name", "sortable": true}},
          {"description": {"name": "i18n:admin.workflows.column.description", "sortable": false}},
          {"dc": {"name": "i18n:admin.workflows.column.created", "format": "datetime", "width": "180px", "align": "center"}}
        ],
        "actions": {
          "edit": {
            "name": "i18n:core.edit",
            "onclick": "modal.open('admin|forms/workflow-form', {title: '{i18n:admin.workflows.modal.edit.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){workFlow.openEdit(formId, {id});}})"
          },
          "delete": {
            "name": "i18n:core.delete",
            "onclick": "if(confirm('{i18n:admin.workflows.confirm.delete}')) workFlow.delete({id}).then(r => r && workFlow.refresh())"
          }
        }
      }
    }
  ]
}
