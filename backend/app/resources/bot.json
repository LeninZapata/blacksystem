{
  "resource": "bot",
  "table": "bots",
  "timestamps": true,
  "middleware": ["throttle:100,1"],

  "routes": {
    "list": {
      "method": "GET",
      "path": "/api/bot",
      "middleware": ["auth"]
    },
    "show": {
      "method": "GET",
      "path": "/api/bot/{id}",
      "middleware": ["auth"]
    },
    "create": {
      "method": "POST",
      "path": "/api/bot",
      "middleware": ["auth", "json"]
    },
    "update": {
      "method": "PUT",
      "path": "/api/bot/{id}",
      "middleware": ["auth", "json"]
    },
    "delete": {
      "method": "DELETE",
      "path": "/api/bot/{id}",
      "middleware": ["auth"]
    }
  },

  "fields": [
    { "name": "name", "type": "string", "required": true, "maxLength": 50 },
    { "name": "personality", "type": "string", "maxLength": 250 },
    { "name": "config", "type": "json" },
    { "name": "dc", "type": "datetime" },
    { "name": "da", "type": "datetime" },
    { "name": "ta", "type": "int" },
    { "name": "tu", "type": "int" }
  ]
}