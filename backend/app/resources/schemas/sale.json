{
  "resource": "sale",
  "table": "sales",
  "timestamps": true,
  "middleware": ["throttle:100,1"],
  "routes": {
    "list": {"method": "GET", "path": "/api/sale", "middleware": ["auth"]},
    "show": {"method": "GET", "path": "/api/sale/{id}", "middleware": ["auth"]},
    "create": {"method": "POST", "path": "/api/sale", "middleware": ["auth", "json"]},
    "update": {"method": "PUT", "path": "/api/sale/{id}", "middleware": ["auth", "json"]},
    "delete": {"method": "DELETE", "path": "/api/sale/{id}", "middleware": ["auth"]}
  },
  "fields": [
    {"name": "user_id", "type": "int", "required": true},
    {"name": "sale_type", "type": "string", "maxLength": 50, "description": "main = principal, ob = order bump, us = upsell"},
    {"name": "origin", "type": "string", "maxLength": 50, "description": "ad, upsell, downsell, offer, organic, etc."},
    {"name": "context", "type": "string", "maxLength": 50},
    {"name": "number", "type": "string", "maxLength": 20},
    {"name": "country_code", "type": "string", "maxLength": 5},
    {"name": "product_name", "type": "string", "maxLength": 220},
    {"name": "product_id", "type": "int"},
    {"name": "bot_id", "type": "int"},
    {"name": "bot_type", "type": "string", "maxLength": 1, "description": "I=Infoproducto, E=Ecommerce, S=Servicio"},
    {"name": "bot_mode", "type": "string", "maxLength": 1, "description": "R=Recibo, C=checkout"},
    {"name": "client_id", "type": "int"},
    {"name": "amount", "type": "decimal", "precision": 10, "scale": 2, "required": true},
    {"name": "billed_amount", "type": "decimal", "precision": 10, "scale": 2},
    {"name": "process_status", "type": "string", "maxLength": 50},
    {"name": "transaction_id", "type": "string", "maxLength": 100},
    {"name": "tracking_funnel_id", "type": "string", "maxLength": 150},
    {"name": "parent_transaction_id", "type": "string", "maxLength": 100},
    {"name": "payment_date", "type": "datetime"},
    {"name": "payment_method", "type": "string", "maxLength": 50, "description": "hotmart, stripe, paypal, etc"},
    {"name": "source_app", "type": "string", "maxLength": 50},
    {"name": "source_url", "type": "string", "maxLength": 250},
    {"name": "device", "type": "string", "maxLength": 50},
    {"name": "force_welcome", "type": "int"},
    {"name": "parent_sale_id", "type": "int"},
    {"name": "is_downsell", "type": "tinyint", "description": "0=no, 1=s√≠"},
    {"name": "status", "type": "tinyint", "required": false, "default": 1, "description": "0: eliminado, 1: activo"},
    {"name": "dc", "type": "datetime"},
    {"name": "du", "type": "datetime"},
    {"name": "tc", "type": "int"},
    {"name": "tu", "type": "int"}
  ]
}