{
  "resource": "client",
  "table": "clients",
  "timestamps": true,
  "middleware": ["throttle:100,1"],
  "routes": {
    "list": {"method": "GET", "path": "/api/client", "middleware": ["auth"]},
    "show": {"method": "GET", "path": "/api/client/{id}", "middleware": ["auth"]},
    "create": {"method": "POST", "path": "/api/client", "middleware": ["auth", "json"]},
    "update": {"method": "PUT", "path": "/api/client/{id}", "middleware": ["auth", "json"]},
    "delete": {"method": "DELETE", "path": "/api/client/{id}", "middleware": ["auth"]}
  },
  "fields": [
    {"name": "user_id", "type": "int", "required": true},
    {"name": "number", "type": "string", "maxLength": 20},
    {"name": "name", "type": "string", "maxLength": 200},
    {"name": "email", "type": "string", "maxLength": 100},
    {"name": "device", "type": "string", "maxLength": 50},
    {"name": "country_code", "type": "string", "maxLength": 5, "required": true},
    {"name": "total_purchases", "type": "int", "default": 0},
    {"name": "amount_spent", "type": "decimal", "precision": 10, "scale": 2, "default": 0.00},
    {"name": "status", "type": "tinyint", "default": 1, "description": "0: inactivo, 1: activo"},
    {"name": "dc", "type": "datetime"},
    {"name": "du", "type": "datetime"},
    {"name": "tc", "type": "int"},
    {"name": "tu", "type": "int"}
  ]
}