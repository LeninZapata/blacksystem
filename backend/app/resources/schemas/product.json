{
  "resource": "product",
  "table": "products",
  "timestamps": true,
  "middleware": ["throttle:50,1"],
  "routes": {
    "list": {"method": "GET", "path": "/api/product", "middleware": ["auth"]},
    "show": {"method": "GET", "path": "/api/product/{id}", "middleware": ["auth"]},
    "create": {"method": "POST", "path": "/api/product", "middleware": ["auth", "json"]},
    "update": {"method": "PUT", "path": "/api/product/{id}", "middleware": ["auth", "json"]},
    "delete": {"method": "DELETE", "path": "/api/product/{id}", "middleware": ["auth"]}
  },
  "fields": [
    { "name": "user_id", "type": "int", "required": true },
    { "name": "name", "type": "string", "maxLength": 200, "required": true },
    { "name": "description", "type": "text" },
    { "name": "config", "type": "json" },
    { "name": "context", "type": "string", "maxLength": 50, "description": "infoproductws, ecommercews, etc." },
    { "name": "bot_id", "type": "int" },
    { "name": "price", "type": "decimal", "precision": 10, "scale": 2 },
    { "name": "status", "type": "tinyint", "required": false, "default": 1, "description": "0: inactivo, 1: activo" },
    { "name": "dc", "type": "datetime" },
    { "name": "du", "type": "datetime" },
    { "name": "tc", "type": "int" },
    { "name": "tu", "type": "int" }
  ]
}