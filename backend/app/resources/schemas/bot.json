{
  "resource": "bot",
  "table": "bots",
  "timestamps": true,
  "middleware": ["throttle:100,1"],
  "routes": {
    "list":    { "method": "GET",    "path": "/api/bot",      "middleware": ["auth"] },
    "show":    { "method": "GET",    "path": "/api/bot/{id}", "middleware": ["auth"] },
    "create":  { "method": "POST",   "path": "/api/bot",      "middleware": ["auth", "json"] },
    "update":  { "method": "PUT",    "path": "/api/bot/{id}", "middleware": ["auth", "json"] },
    "delete":  { "method": "DELETE", "path": "/api/bot/{id}", "middleware": ["auth"] }
  },

  "fields": [
    { "name": "user_id", "type": "int", "required": true },
    { "name": "name", "type": "string", "required": true, "maxLength": 50 },
    { "name": "number", "type": "string", "required": true, "maxLength": 20 },
    { "name": "country_code", "type": "string", "required": true },
    { "name": "personality", "type": "string", "maxLength": 200 },
    { "name": "type", "type": "string", "required": true },
    { "name": "mode", "type": "string", "required": true },
    { "name": "status", "type": "tinyint", "required": false, "default": 1, "description": "0: inactivo, 1: activo" },
    { "name": "config", "type": "json" },
    { "name": "dc", "type": "datetime" },
    { "name": "da", "type": "datetime" },
    { "name": "ta", "type": "int" },
    { "name": "tu", "type": "int" }
  ]
}