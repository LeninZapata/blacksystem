{
  "id": "botwsListado",
  "title": "{i18n:botws.listado.title}",
  "type": "content",
  "scripts": [
    "botws/assets/js/botws.js"
  ],
  "content": [
    {
      "type": "html",
      "content": "<h4>{i18n:botws.listado.header.title}</h4>",
      "order": 0
    },
    {
      "type": "html",
      "content": "<div class='og-flex og-gap-sm og-my-2'><button class='btn btn-primary' onclick=\"ogModal.open('botws|forms/bot-form', {title: '{i18n:botws.ogModal.new.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){botws.openNew(formId);}})\">âž• {i18n:core.add}</button><button class='btn btn-secondary' onclick='botws.refresh();ogToast.info(\"{i18n:botws.refresh.success}\")'>ðŸ”„ {i18n:core.refresh}</button></div>",
      "order": 1
    },
    {
      "type": "component",
      "component": "datatable",
      "order": 2,
      "config": {
        "source": "api/bot",
        "columns": [
          {
            "id": {
              "name": "i18n:botws.bot.column.id",
              "width": "30px",
              "align": "center",
              "sortable": true
            }
          },
          {
            "name": {
              "name": "i18n:botws.bot.column.name",
              "format": "bot-name-with-number",
              "width": "250px",
              "sortable": true
            }
          },
          {
            "status": {
              "name": "i18n:botws.bot.column.status",
              "format": "bot-status",
              "width": "120px",
              "sortable": false
            }
          }
        ],
        "actions": {
          "edit": {
            "name": "i18n:core.edit",
            "onclick": "ogModal.open('botws|forms/bot-form', {title: '{i18n:botws.ogModal.edit.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){botws.openEdit(formId, {id});}})"
          },
          "delete": {
            "name": "i18n:core.delete",
            "onclick": "if(confirm('{i18n:botws.confirm.delete|name:{name}}')) botws.delete({id}).then(r => r && botws.refresh())"
          }
        }
      }
    }
  ]
}