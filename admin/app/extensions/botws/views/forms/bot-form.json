{
  "id": "bot-form",
  "fields": [
    {
      "name": "name",
      "label": "i18n:botws.bot.form.field.name",
      "type": "text",
      "validation": "required|min:3|max:50",
      "placeholder": "i18n:botws.bot.form.field.name.placeholder"
    },
    {
      "name": "number",
      "label": "i18n:botws.bot.form.field.number",
      "type": "text",
      "validation": "required|numeric|min:8|max:20",
      "placeholder": "i18n:botws.bot.form.field.number.placeholder",
      "hint": "i18n:botws.bot.form.field.number.hint"
    },
    {
      "name": "country_code",
      "label": "i18n:botws.bot.form.field.country_code",
      "type": "select",
      "required": true,
      "validation": "required",
      "source": "/api/country?region=america&sort=name&order=asc",
      "sourceValue": "code",
      "sourceLabel": "name",
      "options": [
        {"value": "", "label": "i18n:core.form.select.placeholder"}
      ]
    },
    {
      "name": "personality",
      "label": "i18n:botws.bot.form.field.personality",
      "type": "textarea",
      "validation": "max:550",
      "placeholder": "i18n:botws.bot.form.field.personality.placeholder",
      "rows": 8
    },
    {
      "type": "grouper",
      "mode": "linear",
      "collapsible": false,
      "groups": [
        {
          "title": "üîå Integraciones",
          "fields": [
            {
              "name": "config.workflow_id",
              "label": "i18n:botws.bot.form.field.workflow",
              "type": "select",
              "required": true,
              "validation": "required",
              "source": "/api/workFlow",
              "sourceValue": "id",
              "sourceLabel": "name",
              "options": [
                {"value": "", "label": "i18n:core.form.select.placeholder"}
              ]
            },
            {
              "name": "config.apis.agent",
              "label": "i18n:botws.bot.form.field.api_agent",
              "type": "repeatable",
              "buttonPosition": "top",
              "initialItems": 1,
              "addText": "i18n:core.form.repeatable.add",
              "removeText": "‚ùå",
              "fields": [
                {
                  "name": "credential_id",
                  "label": "i18n:botws.bot.form.field.credential_agent",
                  "type": "select",
                  "required": true,
                  "validation": "required",
                  "source": "/api/credential?type=ai-agent",
                  "sourceValue": "id",
                  "sourceLabel": "name",
                  "options": [
                    {"value": "", "label": "i18n:core.form.select.placeholder"}
                  ]
                },
                {
                  "name": "task",
                  "label": "i18n:botws.bot.form.field.task",
                  "type": "select",
                  "required": true,
                  "validation": "required",
                  "options": [
                    {"value": "", "label": "i18n:core.form.select.placeholder"},
                    {"value": "conversation", "label": "i18n:botws.bot.form.field.task.conversation"},
                    {"value": "image", "label": "i18n:botws.bot.form.field.task.image"},
                    {"value": "audio", "label": "i18n:botws.bot.form.field.task.audio"}
                  ]
                }
              ]
            },
            {
              "name": "config.apis.chat",
              "label": "i18n:botws.bot.form.field.api_chat",
              "type": "repeatable",
              "buttonPosition": "top",
              "initialItems": 1,
              "addText": "i18n:core.form.repeatable.add",
              "removeText": "‚ùå",
              "fields": [
                {
                  "name": "credential_id",
                  "label": "i18n:botws.bot.form.field.credential_chat",
                  "type": "select",
                  "required": true,
                  "validation": "required",
                  "source": "/api/credential?type=chat&_ctx=chat",
                  "sourceValue": "id",
                  "sourceLabel": "name",
                  "options": [
                    {"value": "", "label": "i18n:core.form.select.placeholder"}
                  ]
                }
              ]
            }
          ]
        },
        {
          "title": "üìã Informaci√≥n Referencial",
          "fields": [
            {
              "name": "type",
              "label": "i18n:botws.bot.form.field.type",
              "type": "select",
              "required": true,
              "validation": "required",
              "options": [
                {"value": "", "label": "i18n:core.form.select.placeholder"},
                {"value": "I", "label": "i18n:botws.bot.form.field.type.infoproduct"},
                {"value": "E", "label": "i18n:botws.bot.form.field.type.ecom"}
              ]
            },
            {
              "name": "mode",
              "label": "i18n:botws.bot.form.field.mode",
              "type": "select",
              "required": true,
              "validation": "required",
              "options": [
                {"value": "", "label": "i18n:core.form.select.placeholder"},
                {"value": "R", "label": "i18n:botws.bot.form.field.mode.receipt"},
                {"value": "C", "label": "i18n:botws.bot.form.field.mode.checkout"}
              ]
            }
          ]
        }
      ]
    }
  ],
  "statusbar": [
    {
      "name": "status",
      "type": "checkbox",
      "label": "i18n:botws.bot.form.field.status",
      "default": true,
      "align": "left"
    },
    {
      "name": "cancel",
      "type": "button",
      "label": "i18n:core.cancel",
      "action": "call:ogModal.closeAll",
      "style": "secondary",
      "align": "right"
    },
    {
      "name": "submit",
      "type": "button",
      "label": "i18n:core.save",
      "action": "submit:botws.save",
      "align": "right"
    }
  ]
}