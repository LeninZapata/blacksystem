{
  "id": "productAdAssets",
  "title": "i18n:automation.product_ad_assets.listado.title",
  "type": "content",
  "scripts": ["automation/assets/js/productAdAsset.js"],
  "content": [
    {
      "type": "html",
      "content": "<h4>{i18n:automation.product_ad_assets.listado.header.title}</h4>",
      "order": 0
    },
    {
      "type": "html",
      "content": "<div class='og-flex og-gap-sm og-my-2'><button class='btn btn-primary' onclick=\"ogModal.open('automation|forms/product-ad-asset-form', {title: '{i18n:automation.product_ad_assets.ogModal.new.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){productAdAsset.openNew(formId);}})\">âž• {i18n:core.add}</button><button class='btn btn-secondary' onclick='productAdAsset.refresh();ogToast.info(\"{i18n:automation.product_ad_assets.refresh.success}\")'>ðŸ”„ {i18n:core.refresh}</button></div>",
      "order": 1
    },
    {
      "type": "component",
      "component": "datatable",
      "order": 2,
      "config": {
        "source": "api/productAdAsset",
        "columns": [
          {
            "id": {
              "name": "i18n:automation.product_ad_assets.column.id",
              "width": "30px",
              "align": "center",
              "sortable": true
            }
          },
          {
            "ad_asset_name": {
              "name": "i18n:automation.product_ad_assets.column.ad_asset_name",
              "format": "product-ad-asset-name-with-details",
              "sortable": true,
              "width": "200px"
            }
          },
          {
            "is_active": {
              "name": "i18n:automation.product_ad_assets.column.status",
              "format": "product-ad-asset-status",
              "width": "120px",
              "align": "left",
              "sortable": false
            }
          }
        ],
        "actions": {
          "edit": {
            "name": "i18n:core.edit",
            "onclick": "ogModal.open('automation|forms/product-ad-asset-form', {title: '{i18n:automation.product_ad_assets.ogModal.edit.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){productAdAsset.openEdit(formId, {id});}})"
          },
          "delete": {
            "name": "i18n:core.delete",
            "onclick": "if(confirm('{i18n:automation.product_ad_assets.confirm.delete}')) productAdAsset.delete({id}).then(r => r && productAdAsset.refresh())"
          }
        }
      }
    }
  ]
}