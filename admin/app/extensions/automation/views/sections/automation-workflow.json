{
  "id": "automationWorkflow",
  "title": "{i18n:automation.workflow.listado.title}",
  "type": "content",
  "scripts": ["automation/assets/js/workflow.js"],
  "content": [
    {
      "type": "html",
      "content": "<h4>{i18n:automation.workflow.listado.header.title}</h4>",
      "order": 0
    },
    {
      "type": "html",
      "content": "<div class='og-flex og-gap-sm og-my-2'><button class='btn btn-primary' onclick=\"ogModal.open('automation|forms/workflow-form', {title: '{i18n:automation.workflow.ogModal.new.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){workflow.openNew(formId);}})\">âž• {i18n:core.add}</button><button class='btn btn-secondary' onclick='workflow.refresh();ogToast.info(\"{i18n:automation.workflow.refresh.success}\")'>ðŸ”„ {i18n:core.refresh}</button></div>",
      "order": 1
    },
    {
      "type": "component",
      "component": "datatable",
      "order": 2,
      "config": {
        "source": "api/workFlow",
        "columns": [
          {"id": {"name": "i18n:automation.workflow.column.id", "width": "30px", "align": "center", "sortable": true}},
          {"name": {"name": "i18n:automation.workflow.column.name", "sortable": true, "width": "140px"}},
          {"description": {"name": "i18n:automation.workflow.column.description", "sortable": true, "width": "280px"}}
        ],
        "actions": {
          "edit": {
            "name": "i18n:core.edit",
            "onclick": "ogModal.open('automation|forms/workflow-form', {title: '{i18n:automation.workflow.ogModal.edit.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){workflow.openEdit(formId, {id});}})"
          },
          "delete": {
            "name": "i18n:core.delete",
            "onclick": "if(confirm('{i18n:automation.workflow.confirm.delete}')) workflow.delete({id}).then(r => r && workflow.refresh())"
          }
        }
      }
    }
  ]
}
