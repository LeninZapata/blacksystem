{
  "id": "automationCredentials",
  "title": "{i18n:automation.credentials.listado.title}",
  "type": "content",
  "scripts": ["automation/assets/js/credential.js"],
  "content": [
    {
      "type": "html",
      "content": "<h4>{i18n:automation.credentials.listado.header.title}</h4>",
      "order": 0
    },
    {
      "type": "html",
      "content": "<div class='og-flex og-gap-sm og-my-2'><button class='btn btn-primary' onclick=\"ogModal.open('automation|forms/credential-form', {title: '{i18n:automation.credentials.ogModal.new.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){credential.openNew(formId);}})\">âž• {i18n:core.add}</button><button class='btn btn-secondary' onclick='credential.refresh();ogToast.info(\"{i18n:automation.credentials.refresh.success}\")'>ðŸ”„ {i18n:core.refresh}</button></div>",
      "order": 1
    },
    {
      "type": "component",
      "component": "datatable",
      "order": 2,
      "config": {
        "source": "api/credential",
        "columns": [
          {
            "id": {
              "name": "i18n:automation.credentials.column.id",
              "width": "30px",
              "align": "center",
              "sortable": true
            }
          },
          {
            "name": {
              "name": "i18n:automation.credentials.column.name",
              "format": "credential-name-with-type",
              "sortable": true,
              "width": "180px"
            }
          },
          {
            "status": {
              "name": "i18n:automation.credentials.column.status",
              "format": "credential-status",
              "width": "120px",
              "align": "center",
              "sortable": false
            }
          }
        ],
        "actions": {
          "edit": {
            "name": "i18n:core.edit",
            "onclick": "ogModal.open('automation|forms/credential-form', {title: '{i18n:automation.credentials.ogModal.edit.title}', width: '90%', maxWidth: '700px', showFooter: false, afterRender: function(formId){credential.openEdit(formId, {id});}})"
          },
          "delete": {
            "name": "i18n:core.delete",
            "onclick": "if(confirm('{i18n:automation.credentials.confirm.delete}')) credential.delete({id}).then(r => r && credential.refresh())"
          }
        }
      }
    }
  ]
}
